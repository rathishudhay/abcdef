<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/grid_item"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/count"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFF"
        android:textStyle="bold"
        android:layout_marginLeft="36dp"
        android:textSize="25sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/count"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp">

        <android.support.v7.widget.CardView
            android:layout_weight="2"
            android:visibility="visible"
            android:id="@+id/image_card"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:elevation="8dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            card_view:cardElevation="10dp"
            card_view:cardPreventCornerOverlap="false"
            android:layout_centerVertical="true"
            android:background="#534444"
            card_view:cardCornerRadius="15dp"
            card_view:cardBackgroundColor="#FFFFFF"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:scaleType="centerCrop"
                    android:visibility="visible"

                    android:id="@+id/grid_item_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:src="@drawable/splash_rado_compressed" >
                </ImageView>

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/play_white"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>



        </android.support.v7.widget.CardView>

<!--        <TextView-->

<!--            android:layout_margin="20dp"-->
<!--            android:layout_weight="0.3"-->
<!--            android:id="@+id/play_pause"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="20dp"-->
<!--            android:layout_gravity="center_vertical"-->
<!--            android:background="@drawable/grid_play_button"-->
<!--            android:onClick="playOrPause"/>-->

        <TextView

            android:layout_margin="20dp"
            android:layout_weight="0.2"
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/grid_share_button"
            />
    </LinearLayout>




